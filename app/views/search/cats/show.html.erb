<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
  </head>
  <body class="font-black ">
    <section class="pet-show">
      <article class="pet-show-card">
        <section class="info-and-photo">
          <img class="big-photo" src="<%= presenter.cat.photos.profile_photo %>" alt="">
          <article class="basic-info">
            <div class="pet-name-show"><%= presenter.cat.name %></div>
            <article class="">
              <% presenter.cat.breeds.each do |breed| %>
                <div class="attributes-show"><%= breed %></div>
              <% end %>
              <div class="attributes-show"><%= presenter.cat.age %> - <%= presenter.cat.sex %> - <%= presenter.cat.size %> sized</div>
              <div class="attributes-show"><%= presenter.cat.contact.full_address %></div>
            </article>
            <article class="">
              <div class="attributes-show underline">Contact Info</div>
              <div class="attributes-show"><%= presenter.cat.contact.number %></div>
              <div class="attributes-show"><%= presenter.cat.contact.email %></div>
            </article>
          </article>
        </section>
        <article class="description marg-top-20 color-gray">
          <div class="underline marg-left-10 marg-bottom-10 font-18">Profile</div>
          <div class="attributes-show font-18"> <%= presenter.cat.description %></div>
        </article>
     </article>
   </section>
  </body>
</html>
