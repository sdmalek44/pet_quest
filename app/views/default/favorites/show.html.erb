<main id="pet-search">
  <section id="search-area">
    <% @presenter.favorites.each do |favorite| %>
      <div class="pet-<%= favorite.pet_id %>">
        <a class="card-link" href="/search/
<%= favorite.pet_type %>s/<%= favorite.pet_id %>?name=<%= favorite.name %>&location=
<%= favorite.zip %>&size=<%= favorite.size.first %>&breed=<%= favorite.breed_list.first %>
&age=<%= favorite.age %>&sex=<%= favorite.sex.first %>">
            <article class="pet-box">
                <img class="thumbnail-pic" src="<%= favorite.photo %>" alt="">
              <article class="pet-thumb-info">
                <div class="pet-name"><%= favorite.name %></div>
                <div>
                  <% favorite.breed_list.each do |breed| %>
                    <div class="attribute  small"><%= breed %></div>
                  <% end %>
                </div>
                <div class="attribute"><%= favorite.age %> <%= favorite.sex %></div>
                <div class="attribute"><%= favorite.location %></div>
            </article>
          </article>
        </a>
        <%= button_to "Remove Favorite", delete_favorite_path(fav_id: favorite.id), method: 'delete', class: 'favorites-button' if @presenter.user.logged_in? %>
      </div>
    <% end %>
  </section>
</main>
